      padding-right: 10px;
      padding-top: 15px;
      padding-bottom: 20px;
      padding-left: 15px;
      width: 250px; /* Fixed width for the container */
      border-radius: 10%;
    }
    .trending {
      margin-bottom: 20px;
      font-weight: bold;
      font-size: 25px;
      border-bottom: 2px solid #313232;
      padding-bottom: 10px;
    }
    .trending-title{
        color: #5F5F5F;
    }
    .trending-item{
        margin-bottom: 15px;
        font-size: 20px;
        cursor: pointer;
    }
.post {
      border: transparent;
      padding: 10px;
      margin-bottom: 20px;
      width: 500px;
      display: flex;
      flex-direction: column;
      text-align: left;
      position: relative;
      border-bottom: 1px solid #313232;
      align-items: flex-start;
    }
    .post-info {
      display: flex;
       /* Align items to the start (left) */
      margin-bottom: 10px;
    }
    .user-image {
      border-radius: 50%;
      margin-right: 20px;
      width: 50px; /* Adjust the width to make the image smaller */
      height: 50px; /* Adjust the height accordingly */
      
    }
    .post-content {
      display: flex;
      flex-direction: column;
      justify-content: flex-start; /* Align items to the start (left) */
    }
    .post-name {
      font-weight: bold;
      margin-bottom: 2px; /* Add margin between name and description */
    }
    .post-image {
      max-width: 90%;
      align-items: end;
    }
    .top-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: 520px;
      margin-bottom: 20px;
      border-bottom: 1px solid #313232;
      padding-bottom: 10px;
    }
    .user-profile-pic {
        border-radius: 50%;
        margin-right: 20px;
        width: 40px; /* Adjust the width to make the image smaller */
        height: 40px; /* Adjust the height accordingly */
        align-items: flex-start;
        margin-left: 10px;
    }
    .post-input {
      flex-grow: 1;
      padding: 5px;
      border: 1px transparent;
      background-color: transparent;
      border-radius: 4px;
      margin-right: 10px;
      height: 20px;
      color: white;
    }
    .post-button {
      padding: 8px;
      background-color: #313232;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      margin-right: 10px;
    }
    .interactions{
    padding: 8px 16px;
    letter-spacing: 15px;
    }
    .switch-container {
      display: flex;
      margin-bottom: 10px;
      border-bottom: 1px solid #313232;
      padding-bottom: 5px;
    }

    .switch-button {
      flex-grow: 1;
      padding: 8px;
      padding-top: 3px;
      
      background-color: transparent;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      letter-spacing: 2px;
      margin-right: 5px;
      font-size: 20px;
    }

    .switch-button:last-child {
      margin-right: 0;
    }
    
